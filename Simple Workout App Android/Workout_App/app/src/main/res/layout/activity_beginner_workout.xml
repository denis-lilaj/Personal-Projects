<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beginner_Workout_Activity"
    android:background="#008080" >

    <TextView
        android:id="@+id/Title_Beginner_Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Beginner Workout"
        android:textColor="#000000"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/Note"
        android:layout_below="@+id/Title_Beginner_Workout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Repeat the circuit of the list five times!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textFontWeight="800"
        android:textColor="#000"
        />


    <ImageView
        android:id="@+id/Logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Note"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo"
        />

    <ImageView
        android:id="@+id/LogOut"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@+id/Logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/logout"/>


    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Workouts"/>


    <ListView
        android:id="@+id/ListView_Beginner_Workout"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/Logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:background="#F4ECC2"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/ListView_Beginner_Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Own Workouts"/>



    <ListView
        android:id="@+id/WorkoutAddedListView"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/ListView_Beginner_Workout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:background="#F4ECC2"/>



    <Button
        android:id="@+id/AddNewWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/WorkoutAddedListView"
        android:text="Add New Workout"
        />

</RelativeLayout>