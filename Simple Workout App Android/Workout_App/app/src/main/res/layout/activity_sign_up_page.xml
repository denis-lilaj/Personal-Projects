<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_Up_Page"
    android:background="#008080">

    <TextView
        android:id="@+id/ClickOnImage"
        android:layout_marginTop="120dp"
        android:text="Click On Image Below To Put Your Photo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/SignUpImage"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/signup"
        />

    <EditText
        android:layout_marginTop="300dp"
        android:id="@+id/UserName"
        android:hint="Enter your name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/UserName"
        android:id="@+id/UserEmail"
        android:hint="Enter your e-mail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/UserEmail"
        android:id="@+id/UserPassword"
        android:hint="Enter your password"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TypeOfProgram"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Choose what type of program you want to follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserPassword"/>

    <Spinner
        android:id="@+id/Spinner"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TypeOfProgram"
        android:layout_marginTop="20dp"
        android:entries="@array/TypesOfWorkouts" />

    <Button
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/SignUpButton"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spinner"
        />

</RelativeLayout>